<h1 class="text-2xl font-semibold text-gray-800 mb-4">Modifier l’aliment</h1>

<% if @error %>
<p style="color: red"><%= @error %></p>
<% end %>

<form action="/consumptions/<%= @consumption.id %>" method="post">
  <input type="hidden" name="_method" value="put" />

  <%= erb :'consumptions/_form', locals: { food_entry_id_value:
  @consumption.food_entry_id, consumption_date_value:
  @consumption.consumption_date, quantity_value: @consumption.quantity,
  button_text: 'Mettre à jour' } %>
</form>
