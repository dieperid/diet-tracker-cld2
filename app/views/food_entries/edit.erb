<h1 class="text-2xl font-semibold text-gray-800 mb-4">Modifier l’aliment</h1>

<% if @error %>
<p style="color: red"><%= @error %></p>
<% end %>

<form
  action="/food_entries/<%= @food_entry.id %>"
  method="post"
  enctype="multipart/form-data"
>
  <input type="hidden" name="_method" value="put" />

  <%= erb :'food_entries/_form', locals: { name: @food_entry.name, calories:
  @food_entry.calories, carbs: @food_entry.carbs, proteins:
  @food_entry.proteins, fats: @food_entry.fats, public: @food_entry.public,
  image: '', button_text: 'Mettre à jour' } %>
</form>
