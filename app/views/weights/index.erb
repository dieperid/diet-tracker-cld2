<div class="container mx-auto">
  <h1 class="text-2xl font-bold text-gray-800 mb-4">Entrées de masse</h1>

  <table
    class="table-auto w-full text-left border-collapse border border-gray-300"
  >
    <thead>
      <tr class="bg-gray-100">
        <th class="border border-gray-300 px-4 py-2">Masse (kg)</th>
        <th class="border border-gray-300 px-4 py-2">Date d'entrée</th>
        <th class="border border-gray-300 px-4 py-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <section>
        <%= line_chart @weights_hash, xtitle: "Date", ytitle: "Masse (kg)",
        height: "400px" %>
      </section>
      <% @weights.each do |weight| %>
      <tr class="hover:bg-gray-50">
        <td class="border border-gray-300 px-4 py-2"><%= weight.weight %></td>
        <td class="border border-gray-300 px-4 py-2">
          <%= weight.date.strftime('%d/%m/%Y') %>
        </td>
        <td class="border border-gray-300 px-4 py-2">
          <!-- Voir -->
          <a
            href="/weights/<%= weight.id %>"
            class="inline-flex items-center text-blue-600 hover:bg-blue-100 px-3 py-2 rounded-lg hover:underline"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 h-5 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              stroke-width="2"
            >
              <path d="M21 21l-6-6M10 17a7 7 0 1 0 0-14 7 7 0 0 0 0 14z" />
            </svg>
            Voir
          </a>

          <!-- Modifier -->
          <a
            href="/weights/<%= weight.id %>/edit"
            class="inline-flex items-center text-yellow-600 hover:bg-yellow-100 px-3 py-2 rounded-lg hover:underline"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 512 512"
              class="w-5 h-5 mr-2 yellow-600 hover:text-yellow-800 transition-all duration-300"
            >
              <!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
              <path
                d="M441 58.9L453.1 71c9.4 9.4 9.4 24.6 0 33.9L424 134.1 377.9 88 407 58.9c9.4-9.4 24.6-9.4 33.9 0zM209.8 256.2L344 121.9 390.1 168 255.8 302.2c-2.9 2.9-6.5 5-10.4 6.1l-58.5 16.7 16.7-58.5c1.1-3.9 3.2-7.5 6.1-10.4zM373.1 25L175.8 222.2c-8.7 8.7-15 19.4-18.3 31.1l-28.6 100c-2.4 8.4-.1 17.4 6.1 23.6s15.2 8.5 23.6 6.1l100-28.6c11.8-3.4 22.5-9.7 31.1-18.3L487 138.9c28.1-28.1 28.1-73.7 0-101.8L474.9 25C446.8-3.1 401.2-3.1 373.1 25zM88 64C39.4 64 0 103.4 0 152L0 424c0 48.6 39.4 88 88 88l272 0c48.6 0 88-39.4 88-88l0-112c0-13.3-10.7-24-24-24s-24 10.7-24 24l0 112c0 22.1-17.9 40-40 40L88 464c-22.1 0-40-17.9-40-40l0-272c0-22.1 17.9-40 40-40l112 0c13.3 0 24-10.7 24-24s-10.7-24-24-24L88 64z"
              />
            </svg>
            Modifier
          </a>

          <!-- Supprimer -->
          <form
            action="/weights/<%= weight.id %>"
            method="post"
            style="display: inline"
          >
            <input type="hidden" name="_method" value="delete" />
            <button
              type="submit"
              class="inline-flex items-center text-red-600 hover:bg-red-100 px-3 py-2 rounded-lg hover:underline"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                stroke-width="2"
              >
                <path
                  d="M19 7l-2 14H7l-2-14m3 0h8M9 4h6a2 2 0 0 1 2 2v2H7V6a2 2 0 0 1 2-2z"
                />
              </svg>
              Supprimer
            </button>
          </form>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <a
    href="/weights/new"
    class="inline-block mt-4 px-6 py-2 bg-blue-500 text-white font-semibold rounded hover:bg-blue-600"
  >
    Ajouter une nouvelle entrée
  </a>
</div>
